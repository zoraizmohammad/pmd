{
  "name": "vscode-pmd",
  "displayName": "PMD - Private Markdown Viewer",
  "description": "VS Code extension for viewing and managing encrypted .pmd files",
  "version": "0.1.0",
  "publisher": "pmd",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onCommand:vscode-pmd.encrypt",
    "onCommand:vscode-pmd.decrypt"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-pmd.encrypt",
        "title": "PMD: Encrypt Markdown File"
      },
      {
        "command": "vscode-pmd.decrypt",
        "title": "PMD: Decrypt PMD File"
      },
      {
        "command": "vscode-pmd.preview",
        "title": "PMD: Preview PMD File"
      }
    ],
    "languages": [
      {
        "id": "pmd",
        "extensions": [".pmd"],
        "aliases": ["Private Markdown"]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3",
    "ts-loader": "^9.5.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-electron": "^2.3.8"
  },
  "dependencies": {
    "crypto-js": "^4.2.0",
    "marked": "^11.1.0"
  }
}
